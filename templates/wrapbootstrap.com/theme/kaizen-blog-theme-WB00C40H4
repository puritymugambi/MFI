<script>
    function bitpay_invoice(email){
        if ($('#bitpay_frame').is(':visible') == false){
            $('#bitpay_frame_loading').show();
            $.ajax({url: '/purchase/invoice-bitpay/WB00C40H4/s', data: {buyer_email: email}, dataType: 'text', type: 'POST', timeout: 10000})
                .done(function(data, textStatus, jqXHR){
                    $('#bitpay_frame_loading').hide();
                    if (data.length > 0){
                        $('#bitpay_frame').show();
                        $('#bitpay_frame_inner').html('<iframe src="' + data + '" scrolling="no" allowtransparency="true" frameborder="0" style="width:500px;height:150px;overflow:hidden;border:none;"></iframe>');
                    } else {
                        $('#bitpay_frame_error').show();
                    }
                })
                .fail(function(){
                    $('#bitpay_frame_loading').hide();
                    $('#bitpay_frame_error').show();
                })
                .always(function(){
                    $('#bitpay_frame_loading').hide();
                });
        }
    };
    function bitpay_payment(user, email, start){
        $('#bitpay_modal').bind('show', function(){
            $('#bitpay_frame_error').hide();
            $('#bitpay_frame_loading').hide();
            
        });
        $('#bitpay_modal').bind('shown', function(){
            bitpay_invoice(email);
        });
        $('#bitpay_modal').bind('hidden', function(){
            if ($('#bitpay_frame').is(':visible') == false){
                $('#bitpay_frame_loading').hide();
                $('#bitpay_frame_error').hide();
            }
        });
        if (start == true){
            bitpay_invoice(email);
        }
    };
    $(document).ready(function(){
    $('#bitpay_buyer_info').show();
    $('#bitpay_continue').click(function(){
        var email = $('#bitpay_email').val();
        if (email.length == 0 || email.indexOf('@') == -1) { return false; }
        $('#bitpay_email').hide();
        $('#bitpay_continue').hide();
        $('#bitpay_buyer_info p').hide();
        $('#bitpay_frame_buyer').text(email);
        $('#bitpay_buyer_info').css({'padding-bottom': '17px', 'padding-top': '0px', 'margin-bottom': '10px', 'border-bottom': '1px solid #eee'});
        $('#bitpay_frame_loading').css({'margin-top': '40px'});
        $('#bitpay_frame_error').css({'margin-top': '40px'});
        bitpay_payment(false, email, true);
    });
    });
</script>

